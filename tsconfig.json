{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "lib": [ "es2015" ],
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./types/"
    ]
  }
}