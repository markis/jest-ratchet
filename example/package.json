{
  "name": "test-project",
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "reporters": [
      "<rootDir>/../index.js"
    ],
    "rootDir": "./",
    "testRegex": "\\.test\\.jsx?$",
    "verbose": true
  },
  "devDependencies": {
    "jest": "^22.0.6"
  }
}