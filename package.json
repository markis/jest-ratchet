{
  "name": "jest-ratchet",
  "version": "1.0.6",
  "description": "Ratchet up code coverage - keep test coverage going only one direction -- up",
  "keywords": [
    "jest",
    "coverage",
    "test",
    "test-coverage",
    "jest-ratchet"
  ],
  "author": "Markis Taylor <m@rkis.cc>",
  "main": "index.js",
  "engines": {
    "node": ">=4"
  },
  "license": "MIT",
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "json-summary",
      "lcovonly",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test-setup/"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "test\\.ts$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "verbose": true
  },
  "scripts": {
    "build": "rollup -c",
    "prepublish": "tslint src/*.ts && jest && rollup -c",
    "jest": "jest",
    "test": "tslint src/*.ts && tsc --noemit && jest --no-cache"
  },
  "devDependencies": {
    "@types/jest": "22.0.1",
    "@types/node": "9.3.0",
    "jest": "22.1.2",
    "rollup": "0.54.1",
    "rollup-plugin-typescript2": "0.10.0",
    "ts-jest": "22.0.1",
    "tslint": "5.9.1",
    "typescript": "2.6.2"
  },
  "dependencies": {
    "json-in-place": "1.0.1",
    "yargs-parser": "8.1.0"
  }
}
